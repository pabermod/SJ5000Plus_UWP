<Page x:Class="SJ5000Plus.Views.ConnectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:Behaviors="using:Template10.Behaviors"
      xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
      xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:controls="using:Template10.Controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:SJ5000Plus.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="using:SJ5000Plus.ViewModels" mc:Ignorable="d">

    <Page.DataContext>
        <vm:ConnectPageViewModel x:Name="ViewModel" />
    </Page.DataContext>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
 
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <FlipView Grid.Row="1" Grid.Column="1">
            <FlipViewItem>
                <TextBlock Text="Hola"/>
            </FlipViewItem>
            <FlipViewItem>
                <TextBlock Text="dos"/>
            </FlipViewItem>
            <FlipViewItem>
                <TextBlock Text="tres"/>
            </FlipViewItem>
        </FlipView>
        <StackPanel Grid.Row="2" Grid.Column="1">
            <Button Command="{Binding MyButtonClickCommand}" IsEnabled="{Binding ButtonEnabled}" Content="{Binding ButtonText}" />
        </StackPanel>
    </Grid>
</Page>
