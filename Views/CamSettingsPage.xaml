                        <ComboBox Header="Video Stamp" 
                                  Name="video_stamp" 
                                  ItemsSource="{Binding video_stamp, Mode=TwoWay}"
                                  SelectedItem="{Binding CurrentValues.video_stamp, Mode=TwoWay}"
